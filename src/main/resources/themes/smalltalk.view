                        // Use the existing element
                        placeholder = existingElement;
                        isNewElement = false;
                    }
                }

                // If no existing element was found, create a new one
                if (isNewElement) {
                    placeholder = document.createElement('li');
                    
                    // Add data-message-id attribute for streaming updates
                    if ($data.id) {
                        placeholder.setAttribute('data-message-id', $data.id);
                    } else {
                        // Generate a unique ID if none is provided
                        const uniqueId = 'msg_' + new Date().getTime() + '_' + Math.floor(Math.random() * 1000);
                        placeholder.setAttribute('data-message-id', uniqueId);
                    }

                    // Handle system notifications
                    if ($data.type === 'system') {
                        placeholder.classList.add('system-notification');
                        
                        // Add specific classes based on event type
                        if ($data.event === 'user_joined') {
                            placeholder.classList.add('user-joined');
                        } else if ($data.event === 'user_left') {
                            placeholder.classList.add('user-left');
                        } else if ($data.event === 'meeting_status') {
                            placeholder.classList.add('meeting-status');
                        }

                        // Create notification content structure
                        const content = document.createElement('div');
                        content.className = 'notification-content';

                        // Add icon based on event type
                        const icon = document.createElement('i');
                        icon.className = 'notification-icon fas';
                        if ($data.event === 'user_joined') {
                            icon.classList.add('fa-user-plus');
                        } else if ($data.event === 'user_left') {
                            icon.classList.add('fa-user-minus');
                        } else if ($data.event === 'meeting_status') {
                            icon.classList.add('fa-info-circle');
                        }
                        content.appendChild(icon);

                        // Add notification text
                        const text = document.createElement('div');
                        text.className = 'notification-text';
                        text.textContent = $data.message;
                        content.appendChild(text);

                        // Add timestamp
                        const time = document.createElement('div');
                        time.className = 'notification-time';
                        time.textContent = $data.time;
                        content.appendChild(time);

                        placeholder.appendChild(content);
                    } else {
                        // Regular message
                        placeholder.setAttribute('class', 'pre-wrapper');
                        placeholder.innerHTML = "<span class='time'>" + $data.time + "</span> <span class='name'>" + $data.user + "</span>: ";
                    }

                    $('#messages').append(placeholder);
                }

                // Handle message content
                if ($data.type !== 'system') {
                    $text = $data.message;

                    // Handle different types of messages
                    if ($data.user === 'ChatGPT') {
                        // ChatGPT messages - use markdown rendering
                        if (isNewElement) {
                            placeholder.innerHTML += "<span class='content'>";
                        }
                        
                        const contentSpan = placeholder.querySelector('.content') || placeholder;
                        
                        // Check if the message contains PlantUML images
                        if ($text.indexOf("<placeholder-image>") >= 0) {
                            // Process PlantUML images as before
                            // ... existing PlantUML handling code ...
                        } else {
                            // Regular ChatGPT message - use markdown
                            requestAnimationFrame(() => {
                                // First set the raw text content to preserve newlines
                                contentSpan.textContent = $text;
                                $text = $text.replace(/\\n/g, '\n')        // Convert literal \n to newlines
                                            .replace(/\\`/g, '`')
                                            .replace(/\\'/g, '\'')
                                            .replace(/\\"/g, '"');        // Fix backticks if escaped
                                // Then parse markdown and update HTML
                                const parsedContent = marked.parse($text, markedOptions);
                                contentSpan.innerHTML = parsedContent;
                                
                                // Apply syntax highlighting to code blocks
                                contentSpan.querySelectorAll('pre code').forEach((block) => {
                                    hljs.highlightElement(block);
                                });
                            });
                        }
                    } else {
                        // Regular user messages - use markdown
                        if (isNewElement) {
                            placeholder.innerHTML += "<span class='content'>";
                        }
                        
                        const contentSpan = placeholder.querySelector('.content') || placeholder;
                        requestAnimationFrame(() => {
                            // First set the raw text content to preserve newlines
                            contentSpan.textContent = $text;
                            $text = $text.replace(/\\n/g, '\n')        // Convert literal \n to newlines
