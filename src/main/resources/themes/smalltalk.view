    <script type="text/javascript">
        //<![CDATA[
        var timer = new Timer(.5, function () {
        });
        var old_title = document.title;
        var dotted = '', user = struct.get("user") ? struct.get("user") : false;
        var markedOptions = {
            renderer: new marked.Renderer(),
